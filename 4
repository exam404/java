import java.util.Scanner;

class Person {
    String name, gender;
    int age;

    Person(String name, String gender, int age) {
        this.name = name;
        this.gender = gender;
        this.age = age;
    }

    void display() {
        System.out.println("name : " + name);
        System.out.println("gender : " + gender);
        System.out.println("age : " + age);
    }
}

class Employee extends Person {
    int id;

    Employee(String name, String gender, int age, int id) {
        super(name, gender, age);
        this.id = id;
    }

    @Override
    void display() {
        super.display();
        System.out.println("employee id : " + id);
    }
}

class Student extends Person {
    int id;

    Student(String name, String gender, int age, int id) {
        super(name, gender, age);
        this.id = id;
    }

    @Override
    void display() {
        super.display();
        System.out.println("student id : " + id);
    }
}

public class ExtendsSE4 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        for (int i = 0; i < 2; i++) {
            System.out.println("Enter the details of Employee " + (i + 1));
            System.out.print("employee name: ");
            String name = input.nextLine();
            input.nextLine();
            System.out.print("age: ");
            int age = input.nextInt();
            input.nextLine(); // Consume the newline character
            System.out.print("gender : ");
            String gender = input.nextLine();
            System.out.print("employee ID : ");
            int id = input.nextInt();
            Employee employee = new Employee(name, gender, age, id);
            employee.display();
            System.out.println("*----------*\n");
        }

        for (int i = 0; i < 2; i++) {
            System.out.println("Enter the details of Student " + (i + 1));
            System.out.print("student name: ");
            String name = input.nextLine();
            input.nextLine(); 
            System.out.print("age: ");
            int age = input.nextInt();
            input.nextLine(); // Consume the newline character
            System.out.print("gender : ");
            String gender = input.nextLine();
            System.out.print("student ID : ");
            int id = input.nextInt();
            Student student = new Student(name, gender, age, id);
            student.display();
            System.out.println("*----------*\n");
        }

        input.close();
    }
}
